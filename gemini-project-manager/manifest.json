{
    "manifest_version": 3,
    "name": "Gemini Project Manager",
    "version": "1.0.0",
    "description": "Organize your Google Gemini chats into nested folders and projects.",
    "action": {
        "default_title": "Gemini Project Manager"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "tabs",
        "scripting",
        "webNavigation",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "src/background/service-worker.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_start"
        }
    ]
}